{
    "name": "andrew/laravel-chat-package",
    "description": "A developer-first, headless real-time chat engine for Laravel & mobile APIs.",
    "type": "library",
    "license": "MIT",

    "authors": [
        {
            "name": "Andrew Rafat",
            "email": "andrewrafat91@gmail.com"
        }
    ],

    "require": {
        "php": ">=8.1",
        "illuminate/support": "^9|^10|^11"
    },

    "autoload": {
        "psr-4": {
            "Andrew\\ChatPackage\\": "src/"
        }
    },

    "extra": {
        "laravel": {
            "providers": [
                "Andrew\\ChatPackage\\ChatServiceProvider"
            ]
        }
    },

    "minimum-stability": "stable",
    "prefer-stable": true
}
